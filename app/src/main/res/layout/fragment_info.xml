                    android:id="@+id/info_field_8_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBlack"
                    android:text="Medium Text" />

                <TextView
                    android:id="@+id/info_label_9_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccentDarkGray"
                    android:text="@string/info_label_sun_today" />
                <TextView
                    android:id="@+id/info_field_9_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBlack"
                    android:text="Medium Text" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/info_button"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="@string/info_button_text"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:textSize="20dp"
            android:layout_gravity="bottom" />

</LinearLayout>
