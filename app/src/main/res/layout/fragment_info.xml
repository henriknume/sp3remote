                    android:id="@+id/info_field_6_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBlack"
                    android:text="Medium Text" />

                <TextView
                    android:id="@+id/info_label_7_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorAccentDarkGray"
                    android:text="@string/info_label_nr_of_resets" />
                <TextView
                    android:id="@+id/info_field_7_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBlack"
                    android:text="Medium Text" />

                <TextView
                    android:id="@+id/info_label_8_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
